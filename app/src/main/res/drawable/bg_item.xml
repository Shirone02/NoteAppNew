<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FFECEC"
                android:endColor="#DD9191"
                android:angle="270"/>
            <corners android:radius="5dp" />
            <stroke android:width="2dp" android:color="@color/brown" android:dashWidth="20dp" android:dashGap="2dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#FFFEDB"
                android:endColor="#FFFDAE"
                android:angle="270"/>
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/brown" />
        </shape>
    </item>
</selector>